<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
"-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
"https://checkstyle.org/dtds/configuration_1.3.dtd">
<module name="Checker">
<property name="charset" value="UTF-8"/>
<property name="severity" value="error"/> <!-- Treat violations as errors, not warnings -->

<module name="FileTabCharacter"> <!-- Disallow tabs, enforce spaces -->
<property name="eachLine" value="true"/>
</module>

<module name="TreeWalker">
<!-- Naming Conventions -->
<module name="ConstantName"/> <!-- e.g., MY_CONSTANT -->
<module name="LocalFinalVariableName"/> <!-- e.g., myVar -->
<module name="LocalVariableName"/>
<module name="MemberName"/> <!-- e.g., myMember -->
<module name="MethodName"/> <!-- e.g., myMethod() -->
<module name="PackageName"/>
<module name="ParameterName"/>
<module name="StaticVariableName"/>
<module name="TypeName"/> <!-- e.g., MyClass -->

<!-- Imports -->
<module name="AvoidStarImport"/> <!-- Disallow import java.util.* -->
<module name="IllegalImport"/> <!-- Can be configured to disallow specific classes -->
<module name="RedundantImport"/> <!-- Flags unused imports -->
<module name="UnusedImports"/>

<!-- Whitespace -->
<module name="GenericWhitespace"/>
<module name="NoWhitespaceBefore"/> <!-- e.g., no space before ';' -->
<module name="NoWhitespaceAfter"/> <!-- e.g., no space after '@' -->
<module name="WhitespaceAfter"/> <!-- e.g., require space after ',' -->
<module name="WhitespaceAround"> <!-- e.g., require space around '=' -->
<property name="allowEmptyConstructors" value="true"/>
<property name="allowEmptyLambdas" value="true"/>
<property name="allowEmptyMethods" value="true"/>
<property name="allowEmptyTypes" value="true"/>
<property name="allowEmptyLoops" value="true"/>
</module>
<module name="SingleSpaceSeparator"/>

<!-- Blocks -->
<module name="LeftCurly"/> <!-- Enforce placement of '{' -->
<module name="RightCurly"/> <!-- Enforce placement of '}' -->
<module name="NeedBraces"/> <!-- Require braces even for one-line if statements -->

<!-- Common Mistakes -->
<module name="EmptyBlock"/> <!-- Flag empty catch blocks {} -->
<module name="EmptyStatement"/> <!-- Flag unnecessary semicolons ;; -->
<module name="EqualsHashCode"/> <!-- Override equals() must override hashCode() -->
</module>
</module>